###############################################################################################################
NAME = philo
###############################################################################################################
CC = gcc

CFLAGS = -Wall -Wextra -Werror
###############################################################################################################

OBJ_DIR = objs

FILES = philo init check_args

SRCS = $(addsuffix .c,$(FILES))

OBJS = ${SRCS:%.c=$(OBJ_DIR)/%.o}

##############################################################################################################
.PHONY: clean
all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) -o $@

$(OBJ_DIR)/%.o: %.c philo.h
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -lpthread -c $< -o $@

clean:
	$(RM) -r $(OBJ_DIR)

fclean: clean
	$(RM) $(NAME)

re: fclean all