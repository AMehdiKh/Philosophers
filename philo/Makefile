###############################################################################################################

NAME = philo

###############################################################################################################

CC = gcc

CFLAGS = -Wall -Wextra -Werror

###############################################################################################################

OBJ_DIR = objs

FILES = main check_args set_data routine utils

SRCS = $(addsuffix .c,$(FILES))

OBJS = ${SRCS:%.c=$(OBJ_DIR)/%.o}

###############################################################################################################

.PHONY: clean
all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) -fsanitize=address -static-libasan -o $@

$(OBJ_DIR)/%.o: %.c philo.h
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -lpthread -fsanitize=address -g -c $< -o $@

clean:
	$(RM) -r $(OBJ_DIR)

fclean: clean
	$(RM) $(NAME)

re: fclean all

###############################################################################################################

